@model LaPizzaria.ViewModels.ProductIndexViewModel
@{ ViewData["Title"] = "Quản lý Món ăn"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary-red">Quản lý Món ăn</h2>
        <div class="btn-group">
            <a asp-action="Upsert" class="btn btn-primary-custom">Thêm Món ăn Mới</a>
            <a asp-action="CreateCombo" class="btn btn-outline-secondary">Tạo Combo</a>
        </div>
    </div>

    <!-- Filter and Search Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm theo tên món ăn...">
                        <button class="btn btn-outline-secondary" type="button">Tìm kiếm</button>
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>Tất cả danh mục</option>
                        <option>Pizza</option>
                        <option>Đồ uống</option>
                        <option>Món phụ</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>Tất cả trạng thái</option>
                        <option>Đang bán</option>
                        <option>Hết hàng</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Product List Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Hình ảnh</th>
                            <th>Tên món</th>
                            <th>Mô tả</th>
                            <th>Giá</th>
                            <th>Danh mục</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var outIds = Model.OutOfStockIds ?? new List<int>();
                        }
                        @foreach (var p in Model.Products)
                        {
                            var isOutOfStock = outIds.Contains(p.Id);
                            <tr>
                                <td>@p.Id</td>
                                <td>
                                    <img src="@(!string.IsNullOrEmpty(p.ImageUrl) ? p.ImageUrl : "https://via.placeholder.com/50")" alt="@p.Name" class="img-thumbnail">
                                </td>
                                <td>@p.Name</td>
                                <td>@p.Description</td>
                                <td>@p.Price.ToString("N0")</td>
                                <td>@p.Category</td>
                                <td>
                                    @if (isOutOfStock)
                                    {
                                        <span class="badge bg-warning text-dark">Hết hàng</span>
                                    }
                                    else if (p.IsActive)
                                    {
                                        <span class="badge bg-success">Đang bán</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ngừng bán</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Upsert" asp-route-id="@p.Id" class="btn btn-sm btn-info">Sửa</a>
                                    <a asp-action="Ingredients" asp-route-id="@p.Id" class="btn btn-sm btn-outline-secondary">Nguyên liệu</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Combo List -->
    <div class="card shadow-sm mt-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Danh sách Combo</h5>
            <a asp-action="CreateCombo" class="btn btn-sm btn-outline-primary">Tạo Combo</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Hình ảnh</th>
                            <th>Tên Combo</th>
                            <th>Mô tả</th>
                            <th>Giảm giá</th>
                            <th>Thành phần</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Combos)
                        {
                            var firstImage = c.Items.FirstOrDefault(i => i.Product != null && !string.IsNullOrEmpty(i.Product.ImageUrl))?.Product?.ImageUrl
                                ?? "https://via.placeholder.com/50?text=Combo";
                            <tr>
                                <td>@c.Id</td>
                                <td><img src="@firstImage" class="img-thumbnail" alt="@c.Name"></td>
                                <td>@c.Name</td>
                                <td>@c.Description</td>
                                <td>
                                    @if (c.DiscountPercent.HasValue)
                                    {
                                        <span class="badge bg-danger">@c.DiscountPercent% + @c.DiscountAmount.ToString("N0")đ</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@c.DiscountAmount.ToString("N0")đ</span>
                                    }
                                </td>
                                <td>
                                    @string.Join(", ", c.Items.Where(i=>i.Product!=null).Select(i => $"{i.Product!.Name} x{i.MinQuantity}"))
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .text-primary-red {
        color: var(--primary-red);
        font-weight: bold;
    }
    .btn-primary-custom {
        background-color: var(--primary-red);
        border-color: var(--primary-red);
        color: var(--light-text-color);
        font-weight: bold;
        border-radius: 5px;
        padding: 8px 15px;
        transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out;
    }
    .btn-primary-custom:hover {
        background-color: var(--dark-brown);
        border-color: var(--dark-brown);
    }
</style>
