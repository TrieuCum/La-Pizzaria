@{ ViewData["Title"] = "Quản lý Món ăn"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary-red">Quản lý Món ăn</h2>
        <a asp-action="Upsert" class="btn btn-primary-custom">Thêm Món ăn Mới</a>
    </div>

    <!-- Filter and Search Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm theo tên món ăn...">
                        <button class="btn btn-outline-secondary" type="button">Tìm kiếm</button>
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>Tất cả danh mục</option>
                        <option>Pizza</option>
                        <option>Đồ uống</option>
                        <option>Món phụ</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>Tất cả trạng thái</option>
                        <option>Đang bán</option>
                        <option>Hết hàng</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Product List Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Hình ảnh</th>
                            <th>Tên món</th>
                            <th>Mô tả</th>
                            <th>Giá</th>
                            <th>Danh mục</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Data - Replace with actual data from model -->
                        <tr>
                            <td>1</td>
                            <td><img src="https://via.placeholder.com/50" alt="Product Image" class="img-thumbnail"></td>
                            <td>Pizza Hải Sản</td>
                            <td>Pizza với hải sản tươi ngon.</td>
                            <td>250.000đ</td>
                            <td>Pizza</td>
                            <td><span class="badge bg-success">Đang bán</span></td>
                            <td>
                                <a asp-action="Upsert" asp-route-id="1" class="btn btn-sm btn-info">Sửa</a>
                                <button class="btn btn-sm btn-danger">Xóa</button>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td><img src="https://via.placeholder.com/50" alt="Product Image" class="img-thumbnail"></td>
                            <td>Coca Cola</td>
                            <td>Nước ngọt giải khát.</td>
                            <td>25.000đ</td>
                            <td>Đồ uống</td>
                            <td><span class="badge bg-warning text-dark">Hết hàng</span></td>
                            <td>
                                <a asp-action="Upsert" asp-route-id="2" class="btn btn-sm btn-info">Sửa</a>
                                <button class="btn btn-sm btn-danger">Xóa</button>
                            </td>
                        </tr>
                        <!-- End Sample Data -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .text-primary-red {
        color: var(--primary-red);
        font-weight: bold;
    }
    .btn-primary-custom {
        background-color: var(--primary-red);
        border-color: var(--primary-red);
        color: var(--light-text-color);
        font-weight: bold;
        border-radius: 5px;
        padding: 8px 15px;
        transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out;
    }
    .btn-primary-custom:hover {
        background-color: var(--dark-brown);
        border-color: var(--dark-brown);
    }
</style>
