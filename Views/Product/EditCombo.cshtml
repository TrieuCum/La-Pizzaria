@{
    ViewData["Title"] = "Sửa Combo";
    var products = ViewBag.Products as IEnumerable<LaPizzaria.Models.Product> ?? Enumerable.Empty<LaPizzaria.Models.Product>();
    var combo = Model as LaPizzaria.Models.Combo;
    var selected = combo?.Items?.ToDictionary(i => i.ProductId, i => i.MinQuantity) ?? new Dictionary<int,int>();
}

<div class="container mt-4">
    <h3>@ViewData["Title"]</h3>
    <form asp-action="EditCombo" method="post">
        <input type="hidden" name="id" value="@combo?.Id" />
        <div class="mb-3">
            <label class="form-label">Tên combo</label>
            <input name="name" class="form-control" value="@combo?.Name" required />
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Giảm giá (VNĐ)</label>
                <input name="discountAmount" class="form-control" value="@(combo?.DiscountAmount ?? 0)" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Giảm %</label>
                <input name="discountPercent" class="form-control" value="@(combo?.DiscountPercent ?? 0)" />
            </div>
        </div>
        <div class="mb-3 mt-3">
            <label class="form-label">Hình ảnh (URL)</label>
            <input name="imageUrl" class="form-control" value="@combo?.ImageUrl" placeholder="https://..." />
        </div>
        <div class="card p-3 mt-3">
            <h6>Chọn các món trong combo</h6>
            @foreach (var p in products)
            {
                var isChecked = selected.ContainsKey(p.Id);
                var qty = isChecked ? selected[p.Id] : 0;
                <div class="row g-2 align-items-center mb-2">
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="productId" value="@p.Id" id="p_@p.Id" @(isChecked?"checked":null) />
                            <label class="form-check-label" for="p_@p.Id">@p.Name (@p.Price.ToString("N0"))</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <input class="form-control" name="minQuantity" value="@(qty>0?qty:1)" />
                    </div>
                </div>
            }
        </div>
        <div class="mt-3">
            <button class="btn btn-brand-primary" type="submit">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>
