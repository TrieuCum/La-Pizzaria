@model LaPizzaria.ViewModels.LoginViewModel
@{ ViewData["Title"] = "Đăng nhập"; }

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-10">
            <div class="card p-4 shadow-lg auth-card">
                <h2 class="card-title text-center mb-3 brand-primary">Đăng nhập</h2>
                <p class="text-center text-muted mb-4">Chào mừng bạn trở lại La Pizzaria</p>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="EmailOrUserName" class="form-control" placeholder="Email hoặc Tên người dùng" />
                        <label asp-for="EmailOrUserName"></label>
                        <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label class="form-check-label" asp-for="RememberMe"></label>
                        </div>
                        <a href="#" class="text-decoration-none brand-accent small">Quên mật khẩu?</a>
                    </div>
                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-brand-primary btn-lg">Đăng nhập</button>
                    </div>
                    <div class="text-center">
                        <p class="mb-0">Chưa có tài khoản? <a asp-controller="Account" asp-action="Register" class="brand-primary-hover">Đăng ký ngay</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-card { background-color: var(--light-cream); border-radius: 15px; overflow: hidden; }
    .brand-primary { color: var(--primary-red); font-weight: bold; }
    .brand-accent { color: var(--wood-brown); }
    .brand-primary-hover:hover { color: var(--primary-red); }
    .btn-brand-primary {
        background-color: var(--primary-red); border-color: var(--primary-red);
        color: var(--light-text-color); font-weight: bold; border-radius: 50px; padding: 10px 30px;
        transition: background-color .3s ease-in-out, border-color .3s ease-in-out;
    }
    .btn-brand-primary:hover { background-color: var(--dark-brown); border-color: var(--dark-brown); }
    .form-floating > .form-control:focus ~ label::after,
    .form-floating > .form-control:not(:placeholder-shown) ~ label::after { background-color: var(--light-cream); }
</style>
