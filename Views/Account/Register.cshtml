@model LaPizzaria.ViewModels.RegisterViewModel
@{ ViewData["Title"] = "Đăng ký"; }

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-11">
            <div class="card p-4 shadow-lg auth-card">
                <h2 class="card-title text-center mb-3 brand-accent">Đăng ký</h2>
                <p class="text-center text-muted mb-4">Tạo tài khoản mới của bạn để khám phá!</p>
                <form asp-controller="Account" asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="FirstName" class="form-control" placeholder="Họ của bạn" />
                                <label asp-for="FirstName"></label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="LastName" class="form-control" placeholder="Tên của bạn" />
                                <label asp-for="LastName"></label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email của bạn" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Số điện thoại" />
                        <label asp-for="PhoneNumber"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-brand-secondary btn-lg">Đăng ký</button>
                    </div>
                    <div class="text-center">
                        <p class="mb-0">Đã có tài khoản? <a asp-controller="Account" asp-action="Login" class="brand-accent-hover">Đăng nhập</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-card { background-color: var(--light-cream); border-radius: 15px; overflow: hidden; }
    .brand-accent { color: var(--wood-brown); font-weight: bold; }
    .brand-accent-hover:hover { color: var(--wood-brown); }
    .btn-brand-secondary {
        background-color: var(--wood-brown); border-color: var(--wood-brown);
        color: var(--light-text-color); font-weight: bold; border-radius: 50px; padding: 10px 30px;
        transition: background-color .3s ease-in-out, border-color .3s ease-in-out;
    }
    .btn-brand-secondary:hover { background-color: var(--primary-red); border-color: var(--primary-red); }
</style>
