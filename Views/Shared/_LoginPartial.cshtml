@using Microsoft.AspNetCore.Identity
@using LaPizzaria.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item d-flex align-items-center gap-2">
        @{
            var user = await UserManager.GetUserAsync(User);
            var avatar = string.IsNullOrWhiteSpace(user?.AvatarUrl) ? "/images/default-avatar.png" : user!.AvatarUrl;
        }
        <div class="d-flex align-items-center gap-2">
            <img src="@avatar" alt="avatar" style="width:32px;height:32px;border-radius:50%;object-fit:cover;border: 2px solid var(--brand-orange-light)" />
            <a id="manage" class="btn-profile-v" asp-controller="Account" asp-action="Manage" title="Manage">
                <i class="bi bi-person-fill"></i>
                Hồ sơ
            </a>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" id="register" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="login" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
