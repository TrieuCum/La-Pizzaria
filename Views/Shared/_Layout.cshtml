<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaPizzaria</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700;900&family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaPizzaria.styles.css" asp-append-version="true" />
</head>
<body>
    <partial name="_SidebarPartial" />

    <div class="content-wrapper">
        <header>
            <nav class="navbar navbar-expand-lg brand-navbar sticky-top">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center me-4" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="brand-logo-icon me-2">🍕</span>
                        <span class="brand-logo-text">LaPizzaria</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="header-center-nav mx-auto mb-2 mb-lg-0">
                            <li><a class="nav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li><a class="nav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")" asp-controller="Product" asp-action="Index">Món ăn</a></li>
                            <li><a class="nav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Voucher" ? "active" : "")" asp-controller="Voucher" asp-action="Index">Khuyến mãi</a></li>
                            <li><a class="nav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")" asp-controller="Order" asp-action="Index">Đơn hàng của tôi</a></li>
                            <li><a class="nav-item-link" href="#">Tích điểm</a></li>
                        </ul>
                        <div class="d-flex align-items-center gap-3">
                            <div class="search-container-v d-none d-xl-flex">
                                <i class="bi bi-search" style="color: #94a3b8;"></i>
                                <input type="text" class="search-input-v" placeholder="Tìm kiếm pizza của bạn...">
                            </div>
                            <partial name="_LoginPartial" />
                            <a href="#" style="position: relative; font-size: 22px; color: #4b5563;" data-bs-toggle="offcanvas" data-bs-target="#cartOffcanvas" id="cart-nav-link">
                                <i class="bi bi-cart3"></i>
                                <span id="cart-count" class="badge-cart-v" style="display: none; padding-left: 5px;">0</span>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div class="flex-grow-1">
            <main role="main">
                @RenderBody()
            </main>
        </div>

        @* Global toast container *@
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1080">
            <div id="toastContainer" class="toast-container"></div>
        </div>

        @* Cart Offcanvas *@
        <div class="offcanvas offcanvas-end" tabindex="-1" id="cartOffcanvas" aria-labelledby="cartOffcanvasLabel">
            <div class="offcanvas-header bg-brand-orange text-white">
                <h5 class="offcanvas-title fw-black" id="cartOffcanvasLabel">Giỏ hàng của bạn</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body d-flex flex-column">
                <div id="cart-items-container" class="flex-grow-1 overflow-auto mb-3">
                    <!-- Cart items will be rendered here -->
                    <div class="text-center py-5">
                        <i class="bi bi-cart-x fs-1 text-brand-gray-light"></i>
                        <p class="text-brand-gray mt-2">Giỏ hàng trống</p>
                    </div>
                </div>
                <div id="cart-summary" class="border-top pt-3" style="display: none;">
                    <div class="d-flex justify-content-between mb-3">
                        <span class="fw-bold">Tổng cộng:</span>
                        <span id="cart-total-price" class="fw-black text-brand-orange fs-5">0₫</span>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-controller="Order" asp-action="ScanQr" class="btn btn-brand-primary py-2 fw-bold">Đặt món ngay</a>
                        <button onclick="cart.clear()" class="btn btn-link text-brand-gray small text-decoration-none">Xóa tất cả</button>
                    </div>
                </div>
            </div>
        </div>

        <footer class="brand-footer">
            <div class="container">
                <div class="row g-4 mb-5">
                    <div class="col-lg-4">
                        <div class="d-flex align-items-center mb-3">
                            <span class="brand-logo-icon me-2">🍕</span>
                            <span class="brand-logo-text">LaPizzaria</span>
                        </div>
                        <p class="text-brand-gray small mb-4">
                            Chế biến những chiếc pizza được yêu thích nhất thành phố bằng tình yêu và nguồn nguyên liệu tươi tốt nhất kể từ năm 2025.
                        </p>
                        <div class="d-flex gap-3">
                            <a href="#" class="text-brand-gray fs-5"><i class="bi bi-globe"></i></a>
                            <a href="#" class="text-brand-gray fs-5"><i class="bi bi-envelope"></i></a>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-2">
                        <div class="footer-heading">Liên kết nhanh</div>
                        <a href="#" class="footer-link">Đặt hàng ngay</a>
                        <a href="#" class="footer-link">Thực đơn của chúng tôi</a>
                        <a href="#" class="footer-link">Khuyến mãi</a>
                        <a href="#" class="footer-link">Định vị cửa hàng</a>
                    </div>
                    <div class="col-md-4 col-lg-2">
                        <div class="footer-heading">Hỗ trợ</div>
                        <a href="#" class="footer-link">Liên hệ với chúng tôi</a>
                        <a href="#" class="footer-link">Câu hỏi thường gặp</a>
                        <a href="#" class="footer-link">Điều khoản dịch vụ</a>
                        <a href="#" class="footer-link">Chính sách bảo mật</a>
                    </div>
                    <div class="col-md-4 col-lg-4">
                        <div class="footer-heading">Đăng ký nhận bản tin của chúng tôi</div>
                        <p class="text-brand-gray small mb-3">Nhận các ưu đãi và mã giảm giá mới nhất.</p>
                        <div class="d-flex gap-2">
                            <input type="email" class="newsletter-input" placeholder="Email">
                            <button class="btn btn-brand-primary py-2 px-3">Tham gia</button>
                        </div>
                    </div>
                </div>
                <hr class="opacity-10 mb-4">
                <div class="text-center text-brand-gray small pb-3">
                    &copy; 2025 LaPizzaria. Một quyền được bảo lưu. Dự án Đồ nghiệp 2026.
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        (function(){
            // Render TempData as toasts if present
            const success = '@(TempData["success"] ?? string.Empty)';
            const error = '@(TempData["error"] ?? string.Empty)';
            if (success) window.showToast && window.showToast(success, 'success');
            if (error) window.showToast && window.showToast(error, 'error');
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
