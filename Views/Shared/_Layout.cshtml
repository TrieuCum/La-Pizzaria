<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaPizzaria</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; }
        .navbar-brand { font-family: 'Playfair Display', serif; font-weight: 900; letter-spacing: .5px; }
    </style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaPizzaria.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark brand-navbar mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-logo rounded-circle me-2">🍕</span>
                    <span>LaPizzaria</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Products</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Table" asp-action="Index">Tables</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Ingredient" asp-action="Index">Ingredients</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">Orders</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Statistics</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Statistics" asp-action="Daily">Daily</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Statistics" asp-action="Weekly">Weekly</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="brand-footer mt-auto">
        <div class="container py-4">
            <div class="row g-3 align-items-center">
                <div class="col-md-6 small">
                    <div class="mb-1 fw-bold">LaPizzaria</div>
                    <div class="text-opacity-75">Hương vị đích thực từ lò nướng Ý</div>
                </div>
                <div class="col-md-6 text-md-end">
                    <a class="footer-link me-3" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    <a class="footer-link me-3" asp-area="" asp-controller="Order" asp-action="Qr">QR</a>
                    <a class="footer-link" asp-area="" asp-controller="Product" asp-action="Index">Menu</a>
                </div>
            </div>
            <div class="pt-3 small text-center text-md-start text-light-50">&copy; 2025 LaPizzaria. All rights reserved.</div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
