@model IEnumerable<LaPizzaria.Models.Voucher>

@{
    ViewData["Title"] = "Quản lý Voucher";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800;900&family=Inter:wght@400;600&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-red: #da291c;
        --light-cream: #f8f5ed;
        --wood-brown: #5a2e0a;
    }
    .voucher-banner {
        background: #ffffff;
        background-image: 
            repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(0,0,0,0.02) 10px, rgba(0,0,0,0.02) 20px),
            url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="paper" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="20" cy="20" r="1" fill="rgba(0,0,0,0.03)"/><circle cx="80" cy="40" r="1" fill="rgba(0,0,0,0.03)"/><circle cx="40" cy="80" r="1" fill="rgba(0,0,0,0.03)"/></pattern></defs><rect width="100" height="100" fill="url(%23paper)"/></svg>');
        position: relative;
        padding: 60px 0;
        margin-bottom: 3rem;
        overflow: hidden;
    }
    .voucher-banner::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 20px;
        background: repeating-linear-gradient(
            90deg,
            #ff7a00 0px,
            #ff7a00 20px,
            #ffffff 20px,
            #ffffff 40px
        );
    }
    .voucher-title {
        font-family: 'Playfair Display', serif;
        font-weight: 900;
        font-size: clamp(36px, 6vw, 64px);
        color: #da291c;
        margin-bottom: 0.5rem;
        line-height: 1.1;
    }
    .voucher-subtitle {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        font-size: clamp(20px, 3vw, 28px);
        color: #5a2e0a;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .brand-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        background: white;
        overflow: hidden;
    }
    
    .table-brand thead th {
        background-color: transparent;
        color: #da291c;
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        font-size: 1.1rem;
        border-bottom: 2px solid #f8f5ed;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .table-brand tbody tr {
        transition: all 0.2s ease;
    }
    
    .table-brand tbody tr:hover {
        background-color: #fff9f9;
        transform: scale(1.005);
        box-shadow: 0 4px 15px rgba(218, 41, 28, 0.05);
    }
    
    .table-brand td {
        vertical-align: middle;
        font-weight: 500;
        color: #5a2e0a;
        border-bottom: 1px solid #f8f5ed;
        padding: 1rem 0.75rem;
    }
    
    .badge-brand {
        padding: 0.5em 1em;
        border-radius: 50px;
        font-weight: 600;
    }
    .badge-active {
        background-color: rgba(40, 167, 69, 0.1);
        color: #28a745;
    }
    .badge-inactive {
        background-color: rgba(108, 117, 125, 0.1);
        color: #6c757d;
    }
    
    .discount-pill {
        background-color: #da291c;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
    }
</style>

<div class="voucher-banner">
    <div class="container position-relative" style="z-index: 1;">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="voucher-title">VOUCHER</h1>
                <div class="voucher-subtitle">
                    <span>QUẢN LÝ MÃ GIẢM GIÁ</span>
                </div>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                <a class="btn btn-brand-primary btn-outline-orange btn-lg shadow-sm" asp-action="Upsert">
                    <i class="bi bi-plus-lg me-2"></i>Thêm Voucher Mới
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="brand-card p-4">
        <div class="table-responsive">
            <table class="table table-brand table-hover mb-0">
                <thead>
                    <tr>
                        <th class="ps-3">Mã</th>
                        <th>Tên Chương Trình</th>
                        <th class="text-center">Giảm Giá</th>
                        <th class="text-center">Sử Dụng</th>
                        <th>Thời Gian</th>
                        <th class="text-center">Trạng Thái</th>
                        <th class="text-end pe-3">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in Model)
                    {
                        <tr>
                            <td class="ps-3"><span class="fw-bold" style="color: #da291c; font-family: monospace; font-size: 1.1em;">@v.Code</span></td>
                            <td>@v.Name</td>
                            <td class="text-center"><span class="discount-pill">-@v.DiscountPercent%</span></td>
                            <td class="text-center">
                                <span class="fw-bold">@v.UsedCount</span> 
                                <span class="text-muted small">/ @(v.MaxUses == 0 ? "∞" : v.MaxUses.ToString())</span>
                            </td>
                            <td>
                                <div class="small">
                                    <div class="text-muted">Hết hạn:</div>
                                    <div class="fw-bold">@(v.ExpiresAtUtc?.ToLocalTime().ToString("dd/MM/yyyy HH:mm") ?? "Vô thời hạn")</div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge badge-brand @(v.IsActive ? "badge-active" : "badge-inactive")">
                                    @(v.IsActive ? "Đang chạy" : "Tạm dừng")
                                </span>
                            </td>
                            <td class="text-end pe-3">
                                <div class="btn-group">
                                    <a class="btn btn-outline-orange btn-sm rounded-start" asp-action="Upsert" asp-route-id="@v.Id">Sửa</a>
                                    <a class="btn btn-outline-danger btn-sm rounded-end" asp-action="Delete" asp-route-id="@v.Id" onclick="return confirm('Bạn có chắc muốn xoá voucher này?')">Xoá</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


