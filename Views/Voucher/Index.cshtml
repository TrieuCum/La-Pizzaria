@model IEnumerable<LaPizzaria.Models.Voucher>

<div class="container mt-4">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h2>Voucher</h2>
		<a class="btn btn-primary" asp-action="Upsert">Thêm voucher</a>
	</div>
	<div class="card">
		<div class="card-body">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Mã</th>
						<th>Tên</th>
						<th>% giảm</th>
						<th>Đã dùng/Tối đa</th>
						<th>Hết hạn</th>
						<th>Trạng thái</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var v in Model)
					{
						<tr>
							<td>@v.Code</td>
							<td>@v.Name</td>
							<td>@v.DiscountPercent%</td>
							<td>@v.UsedCount / @(v.MaxUses == 0 ? "∞" : v.MaxUses)</td>
							<td>@(v.ExpiresAtUtc?.ToLocalTime().ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
							<td>@(v.IsActive ? "Active" : "Inactive")</td>
							<td>
								<div class="btn-group btn-group-sm">
									<a class="btn btn-outline-primary" asp-action="Upsert" asp-route-id="@v.Id">Sửa</a>
									<a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@v.Id">Xoá</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>


